<div class="col-sm-3 col-md-2 sidebar">
	<ul class="nav nav-sidebar">
		{# if menus is defined and menus|length > 1 %}
		<li class="nav-header">Menu's</li>
		{% for menu in menus %}
		<li><a href="#">{{ menu.name }}</a></li>
		{% endfor %}

		<li class="divider"></li>
	{% endif #}

		<h4>Verzamelpagina's</h4>
		<li{% if app.request.attributes.get('_route') == 'kr_solutions_krcms_pages_index' and app.request.attributes.get('parentPageId') is null %} class="active"{% endif %}><a href="{{ path('kr_solutions_krcms_pages_index', { 'siteId': site.id }) }}">Paginaoverzicht</a></li>
		<li class="divider"></li>
			{% if childablePages is defined and childablePages|length > 0 %}
				{% for childablePage in childablePages %}
				<li{% if app.request.attributes.get('_route') == 'kr_solutions_krcms_pages_index' and app.request.attributes.get('parentPageId') == childablePage.id %} class="active"{% endif %}><a href="{{ path('kr_solutions_krcms_pages_index', { 'siteId': site.id, 'parentPageId': childablePage.id }) }}">{{ childablePage.title }}</a></li>
				{% endfor %}

			<li class="divider"></li>
			{% endif %}
	</ul>
	<ul class="nav nav-sidebar">
		<h4>Items toevoegen</h4>

		{% for pageType in pageTypes %}
			{% if pageType.isUserGranted(app.user) %}
				<li{% if app.request.attributes.get('_route') == 'kr_solutions_krcms_pages_add' and app.request.attributes.get('pageType') == pageType.id %} class="active"{% endif %}><a href="{{ path('kr_solutions_krcms_pages_add', { 'siteId': site.id, 'pageTypeId': pageType.id }) }}" data-trigger="hover" rel="popover" title="{{ pageType.name }}" data-content="{{ pageType.description }}">{{ pageType.name }} toevoegen</a></li>
				{% endif %}
			{% endfor %}
	</ul>
</div>